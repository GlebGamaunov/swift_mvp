import Swinject
import SwinjectStoryboard

class {{ module_info.name }}Assembly: Assembly {
	func assemble(container: Container) {
		// register navigator
		container.register({{ module_info.name }}Navigator.self) { (_, view: {{ module_info.name }}ViewInput) in
			return {{ module_info.name }}Navigator(sourceViewController: view as? {{ module_info.name }}ViewController)
		}
		
		// register controller
		container.register({{ module_info.name }}ViewOutput.self) { (_, view: {{ module_info.name }}ViewInput) in
			return {{ module_info.name }}Controller(view: view)
		}
		
		// view
		container.storyboardInitCompleted({{ module_info.name }}ViewController.self) { (r, vc: {{ module_info.name }}ViewInput) in
